<UserControl
    x:Class="Edimsha.WPF.Views.EditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Edimsha.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:viewmodels="clr-namespace:Edimsha.WPF.ViewModels"
    d:DesignWidth="805"
    d:DesignHeight="450"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:EditorViewModel}">
    <StackPanel VerticalAlignment="Stretch">
        <Label HorizontalAlignment="Center" Content="Arrastra las imagenes o carpeta a editar (*.png, *.jpg)" />
        <ListView
            Height="185"
            MinWidth="200"
            Margin="5,0"
            AllowDrop="True">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Eliminar" IsEnabled="False" />
                    <MenuItem Header="Eliminar todos los elementos" IsEnabled="False" />
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <StackPanel Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="5,0,0,0" />
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5,3,5,3" />
                </Style>
            </StackPanel.Resources>

            <Grid Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <CheckBox
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding CleanListOnExit}"
                    VerticalAlignment="Center"
                    Content="Eliminar lista al salir" />
                <Button Grid.Column="2" Content="Seleccionar archivos" />
            </Grid>

            <Grid Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45*" />
                    <ColumnDefinition Width="131*" />
                    <ColumnDefinition Width="88*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Carpeta de salida:" />
                <xctk:WatermarkTextBox
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    Watermark="Por defecto misma carpete edimsha_nombreImagen.png" />

                <Button Grid.Column="2" Content="Seleccionar carpeta" />
            </Grid>

            <Grid Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140*" />
                    <ColumnDefinition Width="101*" />
                    <ColumnDefinition Width="238*" />
                    <ColumnDefinition Width="69*" />
                    <ColumnDefinition Width="274*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Cambiar edimsha por:" />
                <xctk:WatermarkTextBox
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    Watermark="edimsha_ (omitido si la carpeta de salida es diferente)" />
                <CheckBox
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    IsChecked="{Binding AddOnReplace}"
                    Content="Incluir al remplazar" />
            </Grid>

            <Grid Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45*" />
                    <ColumnDefinition Width="131*" />
                    <ColumnDefinition Width="88*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Resolución de salida:" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Label VerticalAlignment="Center" Content="Ancho (px):" />
                    <xctk:WatermarkTextBox
                        Width="40"
                        Height="24"
                        IsEnabled="False"
                        Watermark="552" />

                    <Label VerticalAlignment="Center" Content="Alto (px):" />
                    <xctk:WatermarkTextBox
                        Width="40"
                        Height="24"
                        IsEnabled="False"
                        Watermark="689" />

                    <CheckBox
                        Height="15"
                        Margin="10,0,0,0"
                        IsChecked="{Binding KeepOriginalResolution}"
                        VerticalAlignment="Center"
                        Content="Mantener resolución original" />

                </StackPanel>

                <Button Grid.Column="2" Content="Resoluciones usadas" />
            </Grid>

            <Grid Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42*" />
                    <ColumnDefinition Width="112*" />
                    <ColumnDefinition Width="91*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Content="Compresion en %:" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Slider
                        Width="200"
                        Height="20"
                        Margin="5"
                        Maximum="100"
                        Minimum="1"
                        SmallChange="1"
                        TickFrequency="10" />
                    <CheckBox
                        Height="15"
                        IsChecked="{Binding OptimizeImage}"
                        Margin="8,0,0,0"
                        Content="Optimizar imagen" />
                </StackPanel>
                <CheckBox
                    Grid.Column="2"
                    IsChecked="{Binding ReplaceForOriginal}"
                    Width="140"
                    Height="15"
                    Margin="5,5,0,5"
                    Content="Remplazar por original" />
            </Grid>

            <ProgressBar
                Height="20"
                Margin="5,5,5,0"
                SmallChange="1" />

            <Grid Height="30" Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Margin="5,3"
                    Content="Resetear" />
                <Button
                    Grid.Column="1"
                    Content="Parar"
                    IsEnabled="False" />
                <Button
                    Grid.Column="2"
                    Content="Iniciar"
                    IsEnabled="False" />
            </Grid>

        </StackPanel>
    </StackPanel>
</UserControl>